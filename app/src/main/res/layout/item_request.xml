<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivRequesterProfilePhoto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/background_image"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRequestersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="John Doe"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivRequesterProfilePhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRejectRequest"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_buttons"
        android:onClick="rejectRequest"
        app:layout_constraintStart_toEndOf="@+id/ivRequesterProfilePhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAcceptRequest"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_buttons"
        android:backgroundTint="#228B22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonRejectRequest"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRequestedListingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Garage"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/ivRequesterProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/rbRequesterRating" />

    <TextView
        android:id="@+id/tvRequestedListingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="123 Test St, Jersey City, NJ 07305"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/ivRequesterProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestedListingTitle" />

    <RatingBar
        android:id="@+id/rbRequesterRating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.2"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/ivRequesterProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestersName"
        tools:rating="4.2" />

    <TextView
        android:id="@+id/tvRequestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/ivRequesterProfilePhoto"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>